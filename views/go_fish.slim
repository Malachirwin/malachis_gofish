  - 4.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
  - 5.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
  - 6.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
  - 7.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
  - 6.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
  - 4.times do
    img class="center_pile" style="transform: rotate(#{rand(360)}deg)" width=71 height=96 src="cards/backs_custom.jpg" alt="custom card back"
  br
.player_hand
  -if @turn
    h1 It is your turn
    form method="post"
      input style="font-size: 30px;" type="type" value="ask #playername for a 4" name="request"
      br
      input type="submit"
  h2 = @client_name
  -$game.players.each do |player|
    - if player.name == @client_name
      - player.player_hand.each do |card|
        img class="your_hand" width=90 src="cards/#{card.to_img_path}.png" alt=card.value
javascript:
  const pusher = new Pusher("e09b3296658d893c5367", {
    cluster: "us2"
  });
  const channel = pusher.subscribe('app');
  channel.bind('next-turn', function(data) {
    window.location.reload()
  });
